{
    "rules": {
        "comma-dangle": [2, "always-multiline"],
        "indent": [2, 4],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "strict": [2, "never"]
    },
    "globals": {
        "$": true
    },
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended"
}
